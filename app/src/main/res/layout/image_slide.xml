<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/product_image_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#99000000">

        <ImageButton
            android:id="@+id/remove_image_ib"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="4dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_outline_delete_forever_24"
            app:tint="@color/red" />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/indicator_tv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#99F2B705"
            android:fontFamily="@font/montserrat_semibold"
            android:text="1/8"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/army_green"
            android:textFontWeight="400"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>