<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="180dp"
    android:paddingBottom="100dp"
    tools:context=".PendingViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pending_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_pending_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pending_icon"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="25sp"
            android:textColor="@color/brown"
            android:text="Pending Payment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pending_icon"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:textColor="@color/brown"
            android:text="Go to My Orders for more info."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:paddingEnd="25dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/store_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Store"
            android:layout_marginStart="10dp"
            app:cornerRadius="25dp"
            android:textColor="@color/army_green"
            android:backgroundTint="@color/yellow_orange"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/my_orders_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:layout_marginStart="10dp"
            app:cornerRadius="25dp"
            android:textColor="@color/army_green"
            android:backgroundTint="@color/yellow_orange"
            android:fontFamily="@font/montserrat_bold"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>