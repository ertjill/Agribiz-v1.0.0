<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/highlight_back"
        android:layout_centerHorizontal="true"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/image_card_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/item_image_iv"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_card_cv"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_cv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="13dp">

                <ImageView
                    android:id="@+id/farmer_image_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/agribiz_icon_logo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/image_cv"
                android:fontFamily="@font/montserrat_regular"
                android:text="Tomato (excess)"
                android:textColor="@color/brown"
                android:textSize="13sp" />


        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>