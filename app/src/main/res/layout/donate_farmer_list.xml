<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:backgroundTint="#EBEBEB"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="14dp">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/farmer_profilePic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/cancel" />

            <TextView
                android:id="@+id/farmer_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/farmer_profilePic"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Farmer Name"
                android:textColor="@color/brown"
                android:textSize="16sp" />

            <Button
                android:id="@+id/donate_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/farmer_name_tv"
                android:backgroundTint="@color/yellow_orange"
                android:fontFamily="@font/montserrat_bold"
                android:minHeight="55dp"
                android:text="Donate"
                android:textAllCaps="false"
                android:textColor="@color/army_green"
                android:textSize="14sp"
                app:cornerRadius="24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>