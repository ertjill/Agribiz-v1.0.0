<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".customer.Profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/army_green"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="26dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="35dp">

                <ImageView
                    android:id="@+id/userImage_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/profile_photo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_round_account_circle_70" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/displayName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/dummy_name"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="15sp"
                tools:ignore="UnusedAttribute" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/edit_profile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow_orange"
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="5dp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/army_green"
                    android:textFontWeight="600"
                    android:textSize="11sp"
                    tools:ignore="UnusedAttribute" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/my_orders"
                android:textColor="@color/brown"
                android:textFontWeight="700"
                android:textSize="18sp"
                tools:ignore="RelativeOverlap,UnusedAttribute" />

            <TextView
                android:id="@+id/view_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/view_order_history"
                android:textColor="@color/brown"
                android:textFontWeight="600"
                android:textSize="11sp"
                tools:ignore="RelativeOverlap,UnusedAttribute" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlight_back"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="73dp"
                android:layout_height="97dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/to_prepare_ib"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/to_prepare"
                    android:src="@drawable/to_prepare_tab" />



                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/round_red_11"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="invisible"
                    tools:ignore="UnusedAttribute" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="73dp"
                android:layout_height="97dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/to_ship_ib"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/to_ship"
                    android:src="@drawable/to_ship_tab" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/round_red_11"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="invisible"
                    tools:ignore="UnusedAttribute" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="73dp"
                android:layout_height="97dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/to_receive_ib"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/to_receive"
                    android:src="@drawable/to_receive_tab" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/round_red_11"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="invisible"
                    tools:ignore="UnusedAttribute" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="73dp"
                android:layout_height="97dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rate_ib"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/rate_orders"
                    android:src="@drawable/rate_orders_tab" />

                <TextView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/round_red_11"
                    android:fontFamily="@font/montserrat_regular"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="invisible"
                    tools:ignore="UnusedAttribute" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/highlight_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="19dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--                <ImageView-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:src="@drawable/ic_baseline_edit_location_alt_20"-->
                    <!--                    android:layout_marginRight="10dp"-->
                    <!--                    />-->
                    <TextView
                        android:id="@+id/my_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:text="@string/my_addresses"
                        android:textColor="@color/brown"
                        android:textFontWeight="600"
                        android:textSize="15sp"
                        app:drawableStartCompat="@drawable/ic_baseline_edit_location_alt_20"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/highlight_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="19dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--                <ImageView-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:src="@drawable/ic_baseline_message_20"-->
                    <!--                    android:layout_marginRight="10dp"-->
                    <!--                    />-->
                    <TextView
                        android:id="@+id/messages_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:lineHeight="18.29sp"
                        android:text="@string/messages"
                        android:textColor="@color/brown"
                        android:textFontWeight="600"
                        android:textSize="15sp"
                        app:drawableStartCompat="@drawable/ic_baseline_message_20"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/highlight_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="19dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--                <ImageView-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:src="@drawable/ic_round_swap_horiz_20"-->
                    <!--                    android:layout_marginRight="10dp"-->
                    <!--                    />-->
                    <TextView
                        android:id="@+id/barter_goods_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:lineHeight="18.29sp"
                        android:text="@string/barter_goods"
                        android:textColor="@color/brown"
                        android:textFontWeight="600"
                        android:textSize="15sp"
                        app:drawableStartCompat="@drawable/ic_round_swap_horiz_20"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logout_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:backgroundTint="@color/highlight_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="19dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--                <ImageView-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:src="@drawable/ic_round_logout_20"-->
                    <!--                    android:layout_marginRight="10dp"-->
                    <!--                    />-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center_vertical"
                        android:lineHeight="18.29sp"
                        android:text="@string/logout"
                        android:textColor="@color/brown"
                        android:textFontWeight="600"
                        android:textSize="15sp"
                        app:drawableStartCompat="@drawable/ic_round_logout_20"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
</LinearLayout>